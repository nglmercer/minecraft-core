{
  "name": "minecraft-core",
  "version": "0.0.1",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "scripts": {
    "test": "bun test",
    "manual": "bun run tests/manual.ts",
    "typecheck": "bunx tsc --noEmit",
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "prepublishOnly": "bun run build",
    "publish": "bun publish"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "tsup": "^8.5.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "zod": "^4.1.13"
  }
}